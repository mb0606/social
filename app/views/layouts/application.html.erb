<!DOCTYPE html>
<html>
<head>
  <title>Social</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
	<nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
	    <div class="container">
	    <a class="navbar-brand" href="#">SOCIAL</a>

	    <ul class="nav navbar-nav navbar-left">
	      <li><%= link_to "Feed", statuses_path %></li>
	    </ul>

	    <ul class="nav navbar-nav navbar-right">
		   	
		   	<% if user_signed_in? %>
		   	  <li><%= link_to "Friends", user_friendships_path %><li>
		      <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
		      <li><%= link_to "Log Out", logout_path %></li>
		    <%else%>
               <li><%= link_to "Sign In", login_path %> </li> 
               <li><%= link_to "Sign Up", register_path %></li>
          <%end%>
		    
		</ul>
	</div>
	</nav>

	<div class="container">
		<% flash.each do |type,message| %>
       		<div class="alert <%= flash_class type %>">
	       		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	       		<%= message %>
       		</div>       		
       	<%end%>

       	


		<%= yield %>
	</div>

</body>
</html>
