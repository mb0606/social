

<div class="row">
	<div class="col-md-5">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class:"well"}) do |f| %>
	<fieldset>
		<legend><h2>Sign In</h2></legend>
		  <div class="form-group"><%= f.input :email%></div>

		  <div class="form-group"><%= f.input :password %></div>

		  <% if devise_mapping.rememberable? -%>
		  	<div class="form-group"><%= f.input :remember_me, as: :boolean, input_html: {checked:   false}  %></div>
		   <% end -%>
		

		  <div class="form-action"><%= f.button :submit,"Sign In"%></div><br />
		<% end %>
		
		<%= render "devise/shared/links" %>
	</div>
	<div class="col-md-6">
		<h2>Signing in is easy and secure</h2>
	</div>
</div>