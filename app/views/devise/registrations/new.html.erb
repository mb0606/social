
<div class="row">
	<div class="col-md-5">
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class:"well"}) do |f| %>
	  <%= devise_error_messages! %>
	  <fieldset>
		<legend><h2>Sign Up</h2></legend>

		  <div class="form-group"><%= f.input :first_name,placeholder: 'First name' %></div>
		  
		  <div class="form-group"><%= f.input :last_name, placeholder: 'Last name' %></div>
		  
		  <div class="form-group"><%= f.input :profile_name %></div>


		  <div class="form-group"><%= f.input :email, placeholder: 'user@domain.com' %></div>

		  <div class="form-group"><%= f.input :password %><br /></div>
		  <div class="form-group"><%= f.input :password_confirmation, label: false %><br /></div>

		  <div class="form-actions"><%= f.button :submit %></div>
		<% end %>
		<br />

		<%= render "devise/shared/links" %>
	</div>
</div>